{
  "name": "Exit Tab",
  "description": "This extension prevents spam websites from hijacking your browser by offering a simple force exit button.",
  "version": "1.0",
  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Exit Tab",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": ["background.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2,
  "permissions": ["browsingData", "tabs", "cookies", "<all_urls>"]
}